<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="HeadlineTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/sf_pro_text_medium</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:textColor">@color/colorOnSurface</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="RecipeCardStyle">
        <item name="cardBackgroundColor">@color/colorSurface</item>
        <item name="cardCornerRadius">24dp</item>
        <item name="cardElevation">16dp</item>
    </style>

    <style name="SearchBarStyle">
        <item name="android:elevation">24dp</item>
    </style>

</resources>